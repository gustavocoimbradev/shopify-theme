<header class="header">
    <div class="container">
        <div class="header__top">
            {% if settings.logo %}
                <a href="{{ routes.root_url }}">
                    <img
                    src="{{ settings.logo | image_url }}"
                    alt="Logo da loja" 
                    width="200"
                    >
                </a>
            {% endif %}
        </div>
        <div class="header__bottom">
            <nav>
                <ul>
                    {% for link in linklists.main-menu.links %}
                        <li class="{% if link.links != blank %} has-children {% endif %}">
                            <a href="{{ link.url }}">
                                {{ link.title }}
                            </a>
                            {% if link.links != blank %}
                                <ul>
                                    {% for child_link in link.links %}
                                        <li>
                                            <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>
</header>

