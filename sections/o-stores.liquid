            "default": "Onde Comprar"
        }
    ],
    "blocks": [
        {
            "type": "item",
            "name": "Item",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Logo"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "max_blocks": 4,
    "presets": [
        {
        "name": "Lojas",
        "category": "Custom"
        }
    ]
}
{% endschema %}