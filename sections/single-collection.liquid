{% if section.settings.collection %}
  <section class="l-single-collection">
    <div class="u-container"> 
      <h1 class="l-single-collection__title">{{ section.settings.collection.title }}</h1>
      <div class="l-single-collection__items js-single-collection"> 
        {% for product in section.settings.collection.products %}
          {% render 'card', product: product %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
  
{% schema %}
  {
    "name": "Coleção única",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Escolha a coleção"
      }
    ],
    "presets": [
      {
        "name": "Coleção única"
      }
    ]
  }
{% endschema %}
  