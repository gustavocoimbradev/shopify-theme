
SECTION
<section>
    <div class="container">
      <div>
        {% for block in section.blocks %}
          <figure>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">
            {% endif %}
                <img src="{{ block.settings.imagem | img_url: 'master' }}" alt="" width="" height="">
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </figure>
        {% endfor %}
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Hero",
    "settings": [],
    "blocks": [
      {
        "type": "imagem",
        "name": "Imagem",
        "settings": [
          {
            "type": "image_picker",
            "id": "imagem",
            "label": "Selecionar imagem"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link da imagem"
          }
        ]
      }
    ],
    "max_blocks": 10,
    "presets": [
      {
        "name": "Imagens",
        "category": "Custom",
        "blocks": [
          {
            "type": "imagem"
          }
        ]
      }
    ]
  }
  {% endschema %}
  