<section class="o-about" data-aos="fade-in">
    <div class="container">
        <h1 class="o-about__title">{{ section.settings.title }}</h1>
        <div class="o-about__content">
            <div class="o-about__content__text">
                {{ section.settings.text }}
            </div>
            <figure class="o-about__content__image"> 
                <img src="{{ section.settings.image | img_url: 'original' }}" alt="">
            </figure> 
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Sobre",
    "settings": [
        {
            "type": "text",
            "id": "title",
