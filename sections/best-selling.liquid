{% assign products = collections.all.products | sort: 'best-selling' %}

{% if products != blank %}
    <section class="c-products-single-line" data-aos="fade-in">
      <div class="u-container">
        <h1 class="c-products-single-line__title">{{ section.settings.title }}</h1>
        <div class="c-products-single-line__items js-products-single-line"> 
            {% for product in products limit: 8 %}
                {% render 'card', product: product %}
            {% endfor %}
        </div>
      </div>
    </section>
{% endif %}
  

