{% if section.settings.collection %} 
  <section class="o-single-collection" data-aos="fade-in">
    <div class="container"> 
      <h1 class="o-single-collection__title">{{ section.settings.collection.title }}</h1>
      <div class="o-single-collection__items js-products-single-line"> 
        {% for product in section.settings.collection.products %}
          {% render 'm-card', product: product %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
  
{% schema %}
  {
    "name": "Coleção única",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Escolha a coleção"
      }
    ],
    "presets": [
      {
        "name": "Coleção única"
      }
    ]
  }
{% endschema %}
  