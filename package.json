{
    "name": "telecenter-eletronica",
    "version": "1.0.0",
    "scripts": {
        "dev": "concurrently \"shopify theme dev --store=telecenter-eletronica\" \"npx @tailwindcss/cli -i ./assets/style.css -o ./assets/style.min.css --watch --minify\" \"npx esbuild assets/script.js --outfile=assets/script.min.js --minify --watch\"",
        "prod": "shopify theme push --theme \"telecenter-eletronica\" --allow-live --force",
        "git": "git add . && git pull && git commit -m \"telecenter-eletronica\" && git push",
        "deploy": "npm run git && npm run prod"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.0.17",
        "autoprefixer": "^10.4.21",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^9.1.2",
        "esbuild": "^0.25.1",
        "postcss": "^8.5.3",
        "postcss-cli": "^11.0.1",
        "tailwindcss": "^4.0.17"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.0.17"
    }
}
